---
export interface Props {
	title: string;
	body: string;
	href: string;
	lang: string;
}
import colors from '../colors.json';
const { href, title, body, lang } = Astro.props as Props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
		<span class="lang" style={colors[lang]!==undefined?`color:${colors[lang].color}`:""}>‚óè {lang}</span>
	</a>
</li>
<style>
	:root {
		--link-gradient: linear-gradient(45deg, #4f39fa, #da62c4 30%, var(--color-border) 60%);
	}

	.lang::before {

	}

	.link-card {
		list-style: none;
		display: flex;
		position: relative;
		padding: 0.15rem;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 99%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card>a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1em 1.3em;
		border-radius: 0.35rem;
		color: var(--text-color);
		background-color: #fff1c6;
		opacity: 0.8;
	}

	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		-webkit-animation: text-focus-in 0.7s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
		animation: text-focus-in 0.7s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
	}

	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
		-webkit-animation: text-focus-in 0.7s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
		animation: text-focus-in 0.7s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
	}

	/* ----------------------------------------------
 * Generated by Animista on 2022-7-26 13:22:59
 * Licensed under FreeBSD License.
 * See http://animista.net/license for more info. 
 * w: http://animista.net, t: @cssanimista
 * ---------------------------------------------- */
	@-webkit-keyframes text-focus-in {
		0% {
			-webkit-filter: blur(12px);
			filter: blur(12px);
			opacity: 0;
		}

		100% {
			-webkit-filter: blur(0px);
			filter: blur(0px);
			opacity: 1;
		}
	}

	@keyframes text-focus-in {
		0% {
			-webkit-filter: blur(12px);
			filter: blur(12px);
			opacity: 0;
		}

		100% {
			-webkit-filter: blur(0px);
			filter: blur(0px);
			opacity: 1;
		}
	}


	h2 span {
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #4f39fa;
	}

	.link-card:is(:hover, :focus-within) h2 span {
		transform: translateX(2px);
	}
</style>