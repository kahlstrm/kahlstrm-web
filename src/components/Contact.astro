---
import { Icon } from "astro-icon/components";
---

<div class="socialmedia slide-in-bottom" style="animation-delay: 100ms;">
  <a href="https://github.com/kahlstrm" title="Github">
    <Icon name="github" title="Github" width={50} height={50} />
  </a>
  <a href="https://linkedin.com/in/kahlstrm/" title="Linkedin"
    ><Icon name="linkedin" title="LinkedIn" width={50} height={50} /></a
  >
  <a href="https://t.me/kahlstrm" title="Telegram"
    ><Icon name="telegram" title="Telegram" width={50} height={50} /></a
  >
  <a href="https://discord.com/users/120488156943351809" title="Discord"
    ><Icon name="discord" title="Discord" width={50} height={50} /></a
  >
</div>
<style>
  :root {
    --some-gradient: linear-gradient(
      45deg,
      #4f39fa,
      #da62c4 30%,
      transparent 60%
    );
  }

  .socialmedia {
    margin: 1rem auto 0;
    display: flex;
    gap: 1rem;
  }

  a {
    display: flex;
    position: relative;
    padding: 0.15rem;
    background-image: var(--some-gradient);
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 99%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  a:is(:hover, :focus-within) {
    background-position: 0;
  }

  a:is(:hover, :focus-within) h2 {
    color: #4f39fa;
  }

  a:is(:hover, :focus-within) h2 span {
    transform: translateX(2px);
  }
</style>
