---
export interface Props {
  title: string;
  body: string;
  href: string;
  lang: string;
  index: number;
}
import colors from "../colors.json";
const { href, title, body, lang, index } = Astro.props as Props;
---

<li
  class="link-card slide-in-bottom"
  style={`animation-delay:${500 + 200 * index}ms`}
>
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
    <span
      class="lang"
      style={colors[lang] !== undefined ? `color:${colors[lang].color}` : ""}
      >‚óè {lang}</span
    >
  </a>
</li>
<style>
  :root {
    --link-gradient: linear-gradient(
      45deg,
      #4f39fa,
      #da62c4 30%,
      var(--color-border) 60%
    );
  }

  .link-card {
    list-style: none;
    display: flex;
    position: relative;
    padding: 0.15rem;
    background-image: var(--link-gradient);
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 99%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1em 1.3em;
    border-radius: 0.35rem;
    color: var(--text-color);
    background-color: #fff1c6;
    opacity: 0.8;
  }

  h2 {
    margin: 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    word-break: break-word;
  }

  p {
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  h2 span {
    display: inline-block;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: #4f39fa;
  }

  .link-card:is(:hover, :focus-within) h2 span {
    transform: translateX(2px);
  }
</style>
