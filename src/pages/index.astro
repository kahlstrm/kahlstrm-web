---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import BB8 from "../components/BB8.astro";
import Footer from "../components/Footer.astro";
import repos from '../reposhowcase.json';
import example from '../example.json';
type RepoResponse = typeof example[0];
// fetch github api info of projects
let responses: RepoResponse[];
if (import.meta.env.MODE === 'development') {
	responses = example;
} else {
	const reposhowcase = repos
		.map(n => fetch(`https://api.github.com/repos/${n}`)
			.then(res => res.ok ? res.json().then(data => data as RepoResponse) : null));
	responses = await Promise.all(reposhowcase).then(res => res.filter(a => a != null));
	if (responses.length == 0) {
		throw new Error("couldn't fetch github repos");
	}
}


---

<Layout title="kalski">
	<main>
		<h1>Welcome to <span class="text-gradient">kalski.xyz</span></h1>
		<h2>Projects I've done or have worked on:</h2>
		<ul role="list" class="link-card-grid">
			{responses.map(repo=>(
			<Card body={repo.description} title={repo.name} href={repo.html_url} lang={repo.language} />))}
		</ul>

		<BB8 />
	</main>
	<Footer />
</Layout>

